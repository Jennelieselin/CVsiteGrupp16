@model IEnumerable<Data.Models.CvProfil>

@{
    ViewBag.Title = "SearchIndex";
}

<h2>Alla CVn som är registrerade</h2>

<p>
    @using (Html.BeginForm())
    {
<p>
    Namn: @Html.TextBox("searchString") <br />
    <input type="submit" value="Sök" />
</p>
    }
    <p />


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Privat)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @if (item.ImagePath != null)
                    {
                        var imagePath = "/UploadedImages/" + item.ImagePath;
                <img src="@imagePath" style="max-width: 100px; max-height: 130px" />
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Privat)
            </td>
            <td>
                @Html.ActionLink("Visa CV", "Index", new { id=item.Id }) |
          
        </tr>
}

    </table>
