@model Shared.Models.CvIndex

@{
    ViewBag.Title = "ShowCvIndex";
}


<h2>CV-PROFIL</h2>

<div class="row">
    <div class="col-md-4">
        <p>@Html.DisplayNameFor(model => model.Namn): @Html.DisplayFor(model => model.Namn) </p>
        <p>@Html.DisplayNameFor(model => model.Adress): @Html.DisplayFor(model => model.Adress)</p>
    </div>

    <div class="col-md-4">
        @if (@Model.ImagePath != null)
        {
            var imagepath = "/UploadedImages/" + @Model.ImagePath;
            //@*<img src="@imagepath" class="imgSize" alt="Lägg till bild" />*@
            <img src="@imagepath" style="max-width: 100px; max-height: 120px" class="imgSize" alt="Bild saknas"/>
        }
    </div>

    <div class="col-md-4">
        <h2>Skicka meddelande</h2>
        <p>@Html.ActionLink("Skicka", "Create", "Message", new { receiver = Model.UserName, cvId = Model.Id }, null)</p>
    </div>
</div>

<br />

<h2>Projekt</h2>

<div>
    <table class="table">
        <tr>
            <th>Projektnamn</th>
            <th>Beskrivning</th>
            <th>Utfördes (datum)</th>
        </tr>

        @foreach (var item in Model.ListOfProjekt)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beskrivning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
        </tr>
        }
    </table>
</div>

<br />

